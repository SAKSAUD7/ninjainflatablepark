// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Booking {
  id            String        @id @default(cuid())
  name          String
  email         String
  phone         String
  date          String
  time          String
  duration      String
  adults        Int
  kids          Int
  spectators    Int
  amount        Float
  status        String        @default("CONFIRMED") // Legacy support
  bookingStatus String        @default("PENDING")   // PENDING, CONFIRMED, CANCELLED, COMPLETED
  waiverStatus  String        @default("PENDING")   // PENDING, SIGNED
  paymentStatus String        @default("PENDING")   // PENDING, PAID, REFUNDED, FAILED
  qrCode        String?       @unique
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  customerId    String?
  customer      Customer?     @relation(fields: [customerId], references: [id])
  waivers       Waiver[]
  transactions  Transaction[]
}

model Waiver {
  id             String       @id @default(cuid())
  name           String
  email          String
  phone          String?
  fileUrl        String?
  signedAt       DateTime     @default(now())
  version        String
  emergencyContact String?
  
  // Relations
  bookingId      String?
  booking        Booking?     @relation(fields: [bookingId], references: [id])
  customerId     String?
  customer       Customer?    @relation(fields: [customerId], references: [id])
}

model Customer {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  phone     String?
  notes     String?
  bookings  Booking[]
  waivers   Waiver[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Transaction {
  id        String        @id @default(cuid())
  amount    Float
  method    String        // STRIPE, CASH, RAZORPAY
  status    String        @default("PENDING") // PENDING, PAID, REFUNDED, FAILED
  bookingId String
  booking   Booking       @relation(fields: [bookingId], references: [id])
  createdAt DateTime      @default(now())
}

model ContactInquiry {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String?
  subject     String?
  message     String
  status      String   @default("NEW") // NEW, RESPONDED, CLOSED
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AdminUser {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  password    String   // Hashed
  role        String   @default("EDITOR") // SUPER_ADMIN, EDITOR, SUPPORT
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AuditLog {
  id          String   @id @default(cuid())
  adminId     String
  action      String
  entity      String
  entityId    String?
  details     String?
  createdAt   DateTime @default(now())
}
