// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Booking {
  id            String        @id @default(cuid())
  name          String
  email         String
  phone         String
  date          String
  time          String
  duration      String
  adults        Int
  kids          Int
  spectators    Int
  subtotal      Float         @default(0)
  discountAmount Float        @default(0)
  amount        Float
  voucherCode   String?
  status        String        @default("CONFIRMED") // Legacy support
  bookingStatus String        @default("PENDING")   // PENDING, CONFIRMED, CANCELLED, COMPLETED
  waiverStatus  String        @default("PENDING")   // PENDING, SIGNED
  paymentStatus String        @default("PENDING")   // PENDING, PAID, REFUNDED, FAILED
  type          String        @default("SESSION")   // SESSION, PARTY, MANUAL
  qrCode        String?       @unique
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  customerId    String?
  customer      Customer?     @relation(fields: [customerId], references: [id])
  voucherId     String?
  voucher       Voucher?      @relation(fields: [voucherId], references: [id])
  waivers       Waiver[]
  transactions  Transaction[]
}

model Waiver {
  id             String       @id @default(cuid())
  name           String
  email          String
  phone          String?
  fileUrl        String?
  signedAt       DateTime     @default(now())
  version        String
  emergencyContact String?
  dob            String?
  minors         String?      // JSON string of minors [{name, age}]
  
  // Relations
  bookingId      String?
  booking        Booking?     @relation(fields: [bookingId], references: [id])
  customerId     String?
  customer       Customer?    @relation(fields: [customerId], references: [id])
}

model Customer {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  phone     String?
  notes     String?
  bookings  Booking[]
  waivers   Waiver[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Transaction {
  id        String        @id @default(cuid())
  amount    Float
  method    String        // STRIPE, CASH, RAZORPAY
  status    String        @default("PENDING") // PENDING, PAID, REFUNDED, FAILED
  bookingId String
  booking   Booking       @relation(fields: [bookingId], references: [id])
  createdAt DateTime      @default(now())
}

model ContactInquiry {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String?
  subject     String?
  message     String
  status      String   @default("NEW") // NEW, RESPONDED, CLOSED
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AdminUser {
  id          String      @id @default(cuid())
  name        String
  email       String      @unique
  password    String      // Hashed
  roleId      String?
  role        Role?       @relation(fields: [roleId], references: [id])
  isActive    Boolean     @default(true)
  lastLoginAt DateTime?
  profilePic  String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  auditLogs   AuditLog[]
}

model Role {
  id          String      @id @default(cuid())
  name        String      @unique // SUPER_ADMIN, MANAGER, STAFF, CONTENT_EDITOR, VIEWER
  description String?
  permissions String      // JSON array: ["bookings:read", "bookings:write", etc.]
  users       AdminUser[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Voucher {
  id              String    @id @default(cuid())
  code            String    @unique
  discountType    String    // PERCENTAGE, FLAT
  discountValue   Float
  minOrderAmount  Float?
  expiryDate      DateTime?
  usageLimit      Int?
  usedCount       Int       @default(0)
  isActive        Boolean   @default(true)
  description     String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  // Relations
  bookings        Booking[]
}

model AuditLog {
  id          String    @id @default(cuid())
  adminId     String
  admin       AdminUser @relation(fields: [adminId], references: [id])
  action      String    // LOGIN, LOGOUT, CREATE, UPDATE, DELETE, APPROVE, REJECT
  entity      String    // BOOKING, VOUCHER, BANNER, USER, etc.
  entityId    String?
  details     String?   // JSON: {before: {...}, after: {...}, changes: [...]}
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime  @default(now())
  
  @@index([adminId])
  @@index([entity])
  @@index([createdAt])
}

model BookingBlock {
  id          String   @id @default(cuid())
  startDate   DateTime
  endDate     DateTime
  reason      String
  type        String   // MAINTENANCE, PRIVATE_EVENT, CLOSED
  recurring   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
